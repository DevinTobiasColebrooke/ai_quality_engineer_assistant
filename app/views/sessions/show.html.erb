<div class="h-screen flex flex-col">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <%= link_to sessions_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <div>
          <h1 class="text-xl font-bold text-gray-900"><%= @session.name %></h1>
          <div class="text-sm text-gray-500 flex items-center space-x-2">
            <span><%= @session.url %></span>
            <span class="text-gray-300">|</span>
            <span class="font-medium text-blue-600"><%= @session.agent %> Agent</span>
          </div>
        </div>
      </div>
      
      <div class="flex items-center space-x-3">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= @session.status %>
        </span>
        <%= button_to "Stop Session", session_path(@session), method: :delete, class: "bg-red-50 text-red-700 hover:bg-red-100 px-3 py-1.5 rounded text-sm font-medium transition", form: { data: { turbo_confirm: "End this session?" } } %>
      </div>
    </div>
  </header>

  <div class="flex-1 flex overflow-hidden">
    <!-- Main Interface Area (Playwright View) -->
    <main class="flex-1 bg-gray-100 p-6 overflow-auto">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 h-96 flex flex-col items-center justify-center text-gray-400 mb-6">
        <% if @session.status == 'running' %>
           <div class="flex flex-col items-center">
             <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mb-4"></div>
             <p class="text-lg font-medium text-blue-600">Agent is working...</p>
             <p class="text-sm mt-2">Executing test plan...</p>
           </div>
        <% else %>
           <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
           </svg>
           <p class="text-lg font-medium">Status Panel</p>
           <p class="text-sm mt-2">Ready to run tests.</p>
        <% end %>
      </div>

      <!-- Test Plan Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-2">Test Plan</h3>
        <% if @session.test_plan.present? %>
          <div class="bg-gray-50 p-4 rounded border border-gray-200 font-mono text-sm whitespace-pre-wrap">
            <%= @session.test_plan %>
          </div>
        <% else %>
          <p class="text-gray-500 italic">No test plan generated yet.</p>
        <% end %>
      </div>

      <!-- Screenshots Gallery -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Screenshots</h3>
        <% if @session.screenshots.attached? %>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <% @session.screenshots.each do |screenshot| %>
              <div class="border rounded p-1">
                <%= image_tag screenshot, class: "w-full h-auto rounded" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 text-gray-400 border-2 border-dashed border-gray-200 rounded">
            No screenshots captured yet.
          </div>
        <% end %>
      </div>
    </main>

      <!-- Sidebar / Command Center -->
    <aside class="w-96 bg-white border-l border-gray-200 flex flex-col">
      <div class="p-4 border-b border-gray-200">
        <h2 class="font-semibold text-gray-800">Agent Controls</h2>
      </div>

      <div class="p-4 border-b border-gray-200">
        <%= button_to "Run Test Agent", run_test_session_path(@session), class: "w-full bg-blue-600 text-white px-4 py-3 rounded-lg shadow hover:bg-blue-700 transition font-medium text-center block mb-6" %>

        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Manual Controls</h3>
      </div>

      <!-- Action Log / Chat -->
      <div class="flex-1 overflow-y-auto p-4 space-y-4">
        <div class="bg-blue-50 p-3 rounded-lg text-sm text-blue-800">
          <strong>System:</strong> Session initialized with <%= @session.agent %>.
        </div>
        <!-- Actions will be appended here -->
      </div>

      <!-- Input Area -->
      <div class="p-4 border-t border-gray-200 bg-gray-50">
        <div class="flex flex-col space-y-3">
          <div class="grid grid-cols-2 gap-2">
            <button class="bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 py-1.5 px-3 rounded text-xs font-medium">Open URL</button>
            <button class="bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 py-1.5 px-3 rounded text-xs font-medium">Click Element</button>
            <button class="bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 py-1.5 px-3 rounded text-xs font-medium">Type Text</button>
            <button class="bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 py-1.5 px-3 rounded text-xs font-medium">Screenshot</button>
          </div>
          
          <div class="relative">
            <input type="text" placeholder="Send instruction to agent..." class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
            <button class="absolute right-2 top-1.5 text-blue-600 hover:text-blue-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </aside>
  </div>
</div>
